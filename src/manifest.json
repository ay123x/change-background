{
  "manifest_version": 2,
  "name": "Change background each env",
  "short_name": "ChgBgEachEnv",
  "version": "1.0.3",
  "description": "サイトのホスト名ごとに背景を変更できるプラグイン",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": [
      "change-background-each-env.js"
    ]
    }],
  "options_page": "options.html",
  "permissions": [
    "storage","tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}